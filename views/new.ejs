<%- include('partials/header')-%>

<br><br>
<br><br>

<div class="container" style="margin-top:60px">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><strong>Register New Student</strong></h3></div>
            <div class="panel-body">

	  
	<form action="/poli/new" method="POST" role="form" >
	<div class="form-group">
		<div class="form-group">
		<input type="text" class="form-control"  name="firstname" placeholder="Firstname" required="">
		</div>

		<div class="form-group">
		<input type="text" class="form-control" name="secondname" placeholder="Secondname" required="">
		</div>

		<div class="form-group">
		<input type="text" class="form-control" name="othername" placeholder="Othername">
		</div>

		<div class="form-group">
		<input type="text" class="form-control" name="nickname" placeholder="Nickname">
		</div>

		<div class="form-group">

		<input type="radio" name="student[gender]" value="male"> Male
		<input type="radio" name="student[gender]" value="female"> Female
		</div>

		<div class="form-group">
		<select name="level" class="form-control" required="">
			<option class="form-control" disabled selected>--Level--</option>
			<option class="form-control" value="JS1">JSS1</option>
			<option class="form-control" value="JS2">JSS2</option>
			<option class="form-control" value="JS3">JSS3</option>
			<option class="form-control" value="SS1">SSS1 SCIENCE</option>
			<option class="form-control" value="SM1">SSS1 MANAGEMENT/ART</option>
			<option class="form-control" value="SM2">SSS2 SCIENCE</option>
			<option class="form-control" value="SM2">SSS2 MANAGEMENT/ART</option>
			<option class="form-control" value="SS3">SSS3 SCIENCE</option>
			<option class="form-control" value="SM3">SSS3 MANAGEMENT/ART</option>
		</select>
		</div>
		
		<div class="form-group">
		<input type="text" class="form-control" name="parentname" placeholder="Parents Name" required="">
		</div>
		
	

		<button type="submit" class="btn btn-sm btn-default">Submit</button>
	</form>
	            </div>
        </div>
    </div>
</div>



	


<%- include('partials/footer')-%>